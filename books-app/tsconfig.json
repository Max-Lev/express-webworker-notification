{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": ["es6", "es6", "dom"],
    "lib": [
      "es2015",
      "dom"
    ],
    "allowJs": true
  },
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
